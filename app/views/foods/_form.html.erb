<div class="container mt-3">
  <div class="row justify-content-center">
    <div class="col-md-6"> 
      
      <%= form_with(model: food, local: true) do |form| %>

        <% if food.errors.any? %>
          <div class="alert alert-danger">
            <h4><%= pluralize(food.errors.count, "error") %> prohibited this food from being saved:</h4>

            <ul>
              <% food.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= form.label :name, class: "form-label" %>
          <%= form.text_field :name, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :measurement_unit, class: "form-label" %>
          <%= form.text_field :measurement_unit, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :price, class: "form-label" %>
          <%= form.text_field :price, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.label :quantity, class: "form-label" %>
          <%= form.number_field :quantity, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= form.submit "Save", class: "btn btn-primary" %>
        </div>

      <% end %>

    </div>
  </div>
</div>
